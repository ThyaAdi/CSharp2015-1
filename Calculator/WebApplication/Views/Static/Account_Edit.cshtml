    <h2>Account</h2>
    <form name="theForm">
        <div class="form-horizontal">
            <ul id="validationSummary"></ul>
            <div class="form-group">
                <label for="Name" class = "control-label col-md-2"> Name </label>
                <div class="col-md-10">
                    <input type="text" ng-model="data.Name" id="Name"  class="form-control"/>
                    <div id="validation_for_Name"></div>
                </div>
            </div>
    
            <div class="form-group">
                <label for="Institution" class = "control-label col-md-2"> Institution </label>
                <div class="col-md-10">
                    <input type="text" ng-model="data.Institution" id="Institution"  class="form-control"/>
                    <div id="validation_for_Institution"></div>
                </div>
            </div>
    
            <div class="form-group">
                <label for="Business" class = "control-label col-md-2"> Business </label>
                <div class="col-md-10">
                    <input type="checkbox" ng-model="data.Business" id="Business"  class="form-control"/>
                    <div id="validation_for_Business"></div>
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="button" value="Save" class="btn btn-default" ng-click="save()" />
                </div>
            </div>
        </div>
    </form>
    
    <div>
        <a href="#/Account">Back to List</a>
    </div>
